{% extends "base.html.twig" %}

{% block title %}
	Edition du profil utilisateur
{% endblock %}

{% block body %}

	<div class="container">
		<h1 align="center" class="my-5">Modification du profil</h1>
		{{ form_start(form) }}
		<div class="row">
			<div class="col">
				<div class="alert alert-primary">
					<h2 class="alert-heading">Informations générales</h2>
					<hr>
					{{form_row(form.firstName)}}
					{{form_row(form.lastName)}}
					{{form_row(form.email)}}
					{{form_row(form.picture)}}

				</div>
			</div>
			<div class="col">
				<div class="alert alert-primary clearfix">
					<h2 class="alert-heading">Détails</h2>
					<hr>
					{{form_row(form.introduction)}}
					{{form_row(form.description)}}
                    <button type="submit" class="btn btn-secondary float-right"><i class="fas fa-check"></i>  valider vos modifications</button>
		{{ form_end(form) }}


				</div>
			</div>
		</div>
		
	</div>

{% endblock %}
