{% extends "admin/base.html.twig" %}

{% block title %}
	Gestion de la réservation n°{{booking.id}}
{% endblock %}

{% block body %}

	<div class="container">
		<h1 class="my-5" align="center">Modifier la réservation n°{{booking.id}}</h1>
		{{form_start(form)}}
		<div class="row">
			<div class="col">
				{{form_row(form.startDate)}}
				{{form_row(form.endDate)}}
			</div>
			<div class="col">
				{{form_row(form.booker)}}
				{{form_row(form.ad)}}
			</div>
            </div>
			{{form_row(form.comment)}}
			<button type="submit" class="btn btn-success">
				<div class="i fas fa-check"></div>
				Enregistrer les modifications
			</button>
		
		{{form_end(form)}}
	</div>

{% endblock %}
