{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des réservations{% endblock %}

{% block body %}
<div class="container-fluid">
		<h1 align="center" class="my-5">Gestion des Réservations</h1>
		<table class="table table-hover">
			<thead>
				<tr align="center">
					<th>Id</th>
					<th>date</th>
					<th>Visiteur</th>
					<th>Annonce</th>
                    <th>Montant</th>
                    <th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for booking in pagination.data %}
					<tr align="center">
						<td>{{booking.id}}</td>
						<td>{{booking.createdAt | date('d/m/Y')}}</td>
						<td>
                            <img src="{{booking.booker.picture}}" alt="avatar de l'auteur" class="avatar avatar-micro mr-2">
                            {{booking.booker.fullName}}
						<td>{{booking.ad.title}}</td>
                        <td>{{booking.amount}}</td>
                        <td>
                            <a href="{{path('admin_bookings_edit', {'id': booking.id}) }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                            <a href="{{path('admin_bookings_delete', {'id': booking.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		{{pagination.display()}}
	</div>
{% endblock %}
